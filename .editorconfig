# http://EditorConfig.org
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8

[*.js]
indent_size = 2

[*.ts]
indent_size = 2

[*.scss]
indent_size = tab
indent_style = tab

[*.html]
indent_size = tab
indent_style = tab

[*.njk]
indent_size = tab
indent_style = tab

[*.php]
indent_size = tab
indent_style = tab

[*.sass]
indent_size = tab
indent_style = tab

[*.sss]
indent_size = tab
indent_style = tab
